<% if @newissuealert.template? %>
    <%= render :inline => @newissuealert.template, :locals => { :issue => @issue, :issue_url => @issue_url } %>
<% else %>
<!DOCTYPE html>
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
  </head>
  <body>
<%= 
l(:text_issue_added, :id => "##{@issue.id}", :author => @issue.author)
%>
<hr />
<%= render :partial => "issue_html", :locals => { :issue => @issue, :issue_url => @issue_url } %>
<hr />
<p>
<%= l(:newissuealerts_footer) %>
</p>
  </body>
</html>
<% end %>